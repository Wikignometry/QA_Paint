from button import *
    
def makePolygonButtons(app):
    buttons = []
    PolygonButtonActions={'outline thickness':getPolygonThickness, 
                          'outline color': getPolygonColor,
                        'fill color': getPolygonFill
                        }
    y = 50
    x = 100
    for label in PolygonButtonActions:
        buttons.append(Button((50,30), location=(x, y), 
        label=label, fill='light grey', action=PolygonButtonActions[label]))
        x += 60
    return buttons

def getPolygonThickness(app):
     thickness = app.getUserInput('input your outline thickness here')
     if thickness != None:
        app.polygonOutlineThickness = int(thickness)

def getPolygonFill(app):
    app.polygonFill = app.getUserInput('input your fill color here')
    print(f"polygonFill={polygonFill}")

def getPolygonColor(app):
    app.polygonOutlineColor=app.getUserInput('input your outline color here')